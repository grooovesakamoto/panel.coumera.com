generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "linux-musl"]
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  role          Role      @default(VIEWER)
  phone         String?
  isActive      Boolean   @default(true)
  lastLogin     DateTime?
  clientId      String?
  client        Client?   @relation(fields: [clientId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  createdBy     String?   // 作成者のID
}

model Client {
  id              String    @id @default(cuid())
  name            String    @unique
  description     String?
  contactPerson   String?
  contactEmail    String?
  contactPhone    String?
  address         String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  devices         Device[]
  users           User[]
}

model Device {
  id            String   @id @default(cuid())
  name          String
  actName       String
  status        String   @default("offline")
  lastPing      DateTime @default(now())
  version       String
  clientId      String
  client        Client   @relation(fields: [clientId], references: [id])
  createdAt     DateTime @default(now())
  deviceId      String   @unique
  hostname      String
  hardwareId    String   @unique
  wifiConfigs   Json
  updateBlocked Boolean  @default(false)
  deviceStatus  Json
  installedApps String[]
}

enum Role {
  ADMIN         // システム管理者（弊社）
  CLIENT_ADMIN  // クライアント管理者
  DEVELOPER     // 設定変更権限を持つユーザー
  VIEWER        // 閲覧専用ユーザー
}

enum DeviceStatus {
  ONLINE
  OFFLINE
  MAINTENANCE
}
